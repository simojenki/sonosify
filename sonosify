#!/usr/bin/env sh

USAGE="Usage: `basename $0` input output"

if [ $# -ne 2 ]; then
    echo $USAGE >&2
    exit 1
fi

I=$1
O=$2

[ ! -e $I ] && \
    echo "Input file $I does not exist" >&2 && \
    exit 1

case "${I}" in
    *.mp3)
        ffmpeg \
            -i "${I}" \
            -map 0:a \
            -c:a copy \
            -map_metadata -1 \
            -f mp3 \
            "${O}"
    ;;
    *.flac)
        ffmpeg \
            -i "${I}" \
            -map 0:a \
            -c:a copy \
            -map_metadata -1 \
            -f flac \
            "${O}"
    ;;
    *)
        echo "Unsupported file type for ${I}" >&2
        exit 1
    ;;
esac
