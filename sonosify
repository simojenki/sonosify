#!/usr/bin/env sh

set -o errexit

log() {
    if [ "${SONOSIFY_LOG}" == "true" ]; then
        echo $1 1>&2
    fi
}

USAGE="Usage: `basename $0` input output"

if [ $# -ne 2 ]; then
    echo $USAGE >&2
    exit 1
fi

I=$1
O=$2

[ ! -e $I ] && \
    echo "Input file $I does not exist" >&2 && \
    exit 1

stream0=$(ffprobe -select_streams 0 -show_streams "${I}")

codec_type=$(echo "${stream0}" | grep "^codec_type=" | cut -d = -f 2)
if [ "${codec_type}" != "audio" ]; then
    echo "Expected stream 0 to be audio, but is ${codec_type}" >&2
    exit 1
fi

codec_name=$(echo "${stream0}" | grep "^codec_name=" | cut -d = -f 2)

case "${codec_name}" in
    mp3)
        log "sonosify mp3 -> mp3"
        ffmpeg \
            -i "${I}" \
            -map 0:a \
            -c:a copy \
            -map_metadata -1 \
            -f mp3 \
            "${O}" 2>/dev/null
    ;;
    flac)
        sample_fmt=$(echo "${stream0}" | grep "^sample_fmt=" | cut -d = -f 2)
        sample_rate=$(echo "${stream0}" | grep "^sample_rate=" | cut -d = -f 2)

        out_fmt="${sample_fmt}"
        out_rate="44100"
        case "${sample_rate}" in
            96000)  out_rate="48000";;
            192000) out_rate="48000";;
            *) out_rate="${sample_rate}";;
        esac

        log "codec flac@${sample_fmt}:${sample_rate} -> flac@${out_fmt}:${out_rate}"

        ffmpeg \
            -i "${I}" \
            -af "aresample=resampler=soxr:out_sample_fmt=${out_fmt}:out_sample_rate=${out_rate}" \
            -map_metadata -1 \
            -f flac \
            "${O}" 2>/dev/null
    ;;
    *)
        echo "Unsupported file type for ${I}" >&2
        exit 1
    ;;
esac
